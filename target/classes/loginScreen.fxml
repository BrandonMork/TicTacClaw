<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="500.0" minWidth="450.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.baylor.ecs.LoginScreenController">
   <center>
      <VBox maxWidth="200.0" minWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <TextField id="usernameField" promptText="username" />
            <PasswordField id="passwordField" promptText="password" />
            <Region minHeight="20.0" />
            <Button id="loginButton" fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" minWidth="90.0" mnemonicParsing="false" onAction="#loginAction" text="Login" textAlignment="CENTER" translateX="45.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Button>
            <Button id="registerButton" fx:id="registerButton" alignment="CENTER" contentDisplay="CENTER" minWidth="90.0" mnemonicParsing="false" onAction="#registerAction" text="Register" textAlignment="CENTER" translateX="45.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Button>
            <Hyperlink id="forgotPassword" fx:id="forgotPassword" alignment="CENTER" contentDisplay="CENTER" minWidth="110.0" onAction="#forgotAction" text="Forgot Password?" textAlignment="CENTER" translateX="35.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Hyperlink>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <HBox id="titleGame" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Text fill="D8D8D8" strokeType="OUTSIDE" strokeWidth="0.0" text="Tic-Tac-Claw" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Text>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
