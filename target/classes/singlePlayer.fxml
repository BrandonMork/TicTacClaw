<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderpane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.baylor.ecs.singlePlayer">
   <center>
      <Pane fx:id="pane" prefHeight="1000.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></Pane>
   </center>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <left>
      <VBox alignment="TOP_CENTER" spacing="250.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Player 1">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="player1Turn" alignment="CENTER" text="Your Turn!">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font></Label>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
   </left>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Tic-Tac-Claw">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <right>
      <VBox alignment="TOP_CENTER" spacing="250.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_CENTER" text="Player 2">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="player2Turn" alignment="CENTER" text="Your Turn!">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
